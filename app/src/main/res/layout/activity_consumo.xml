<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F4F8"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumo Energético"
        android:textSize="28sp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:background="@drawable/text_background"
        android:padding="8dp" />

    <!-- Aquí se mostraría el gráfico de consumo -->
    <FrameLayout
        android:id="@+id/lineChartContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp">
        <!-- El gráfico se agregará aquí programáticamente -->
    </FrameLayout>

    <!-- Botón para volver a la pantalla principal -->
    <Button
        android:id="@+id/btnViewMenu"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Volver al Menú Principal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_green"
        android:textColor="#FFFFFF"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Botón para ir a las recomendaciones -->
    <Button
        android:id="@+id/btnViewRecommendations"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Ver Recomendaciones de Ahorro"
        android:background="@drawable/rounded_button_blue"
        android:textColor="#FFFFFF"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>
